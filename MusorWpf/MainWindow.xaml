                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nickname" Width="*" Binding="{Binding Nickname}" />
                    <DataGridTextColumn Header="Gifter" Width="*" Binding="{Binding NicknameSended}" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:yyyy.MM.dd HH:mm\}}"  Width="*" />
                    <DataGridTextColumn Header="Code" Width="*" Binding="{Binding code}"/>
